<section class="container">
  <h2 class="text-center heading">Featured Picture of the Day</h2>
  <section class="row justify-content-center">
    <section class="col-lg-8">
      <div class="card mb-3 bg-dark">
        <img src="{{hdurl}}" class="card-img-top apod" alt="{{title}}" />
        <h5 class="card-title text-center fs-1">{{title}}</h5>
        <div class="card-body">
          <p class="card-text fs-5 mt-1">{{explanation}}</p>
          {{#if copyright}}
            <p class="card-text"><small class="text-muted">Image by
                {{copyright}}</small></p>
          {{/if}}
        </div>
      </div>
    </section>
  </section>
</section>